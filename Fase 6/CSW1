enable
configure terminal
! Basis configuratie
hostname BRU-CSW-1
no ip domain-lookup
ip routing
spanning-tree mode rapid-pvst
! Optionals behouden
ip domain-name allsafe1.edu
line vty 0 4
password cisco
login
transport input ssh telnet
exit
! VLAN configuratie
vlan 10
name DATA
exit
vlan 20
name WIRELESS
exit
vlan 100
name MGMT
exit
vlan 200
name SERVERS
exit
! Interface naar FW_BRU (BXL-RTR-1)
interface FastEthernet0/20
description Connection to FW_BRU
no switchport
ip address 10.4.5.242 255.255.255.248
no shutdown
! Trunk interface naar Layer 2 Switch
interface FastEthernet0/1
description Trunk to BRU L2-S1
switchport trunk encapsulation dot1q
switchport mode trunk
switchport trunk allowed vlan 10,20,100,200
no shutdown
! Trunk interface naar tweede Layer 2 Switch
interface FastEthernet0/3
description Trunk to BRU L2-S2
switchport trunk encapsulation dot1q
switchport mode trunk
switchport trunk allowed vlan 10,20,100,200
no shutdown
! Port-channel interface voor Etherchannel naar BXL-CSW-2
interface Port-channel1
description HSRP Etherchannel to BXL-CSW-2
switchport trunk encapsulation dot1q
switchport mode trunk
switchport trunk allowed vlan 10,20,100,200
no shutdown
! SVIs en HSRP (Primary)
interface Vlan20
description WIRELESS 10.4.0.0/22
ip address 10.4.0.2 255.255.252.0
standby 20 ip 10.4.0.1
standby 20 priority 110
standby 20 preempt
ip helper-address 10.4.6.10
no shutdown
interface Vlan10
description DATA 10.4.4.0/24
ip address 10.4.4.2 255.255.255.0
standby 10 ip 10.4.4.1
standby 10 priority 110
standby 10 preempt
ip helper-address 10.4.6.10
no shutdown
interface Vlan100
description MGMT 10.4.5.0/26
ip address 10.4.5.2 255.255.255.192
standby 100 ip 10.4.5.1
standby 100 priority 110
standby 100 preempt
ip helper-address 10.4.6.10
no shutdown
interface Vlan200
description SERVERS
ip address 10.4.6.2 255.255.255.0
standby 200 ip 10.4.6.1
standby 200 priority 110
standby 200 preempt
ip helper-address 10.4.6.10
no shutdown
! EtherChannel naar L3-S2 (LACP)
interface range Fa0/23 - 24
description EtherChannel to BXL-CSW-2
switchport trunk encapsulation dot1q
switchport mode trunk
switchport trunk allowed vlan 10,20,100,200
channel-group 1 mode active
no shutdown
exit
! STP root configuratie
spanning-tree vlan 10,20,100,200 root primary
! OSPF Configuratie
router ospf 1
router-id 1.1.1.1
network 10.4.5.240 0.0.0.7 area 0
network 10.4.0.0 0.0.3.255 area 0
network 10.4.4.0 0.0.0.255 area 0
network 10.4.5.0 0.0.0.63 area 0
network 10.4.6.0 0.0.0.255 area 0
passive-interface Vlan20
passive-interface Vlan10
passive-interface Vlan100
passive-interface Vlan200
! Default route naar FW_BRU
ip route 0.0.0.0 0.0.0.0 10.4.5.241
end
